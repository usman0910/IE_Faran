
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div ng-app="MyApp" ng-controller="AppCtrl" class="main-content form-horizontal" role="form">




    <div class="box">
        <div style="background-color:#b8c7ce" class="box-header with-border">
            <h3 class="box-title">Orders</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="col-md-6">
                <div style="box-shadow:0 0px 11px rgba(0,0,0,0.3)" class="box">
                    <div style="background-color:#b8c7ce" class="box-header with-border">
                        <h3 class="box-title">New Orders</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <md-input-container style="text-align:center" class="md-block col-md-8">

                                <md-select id="Select_Category_products" ng-change="changetable()" ng-model="cate.Id">
                                    <label>Search By Category</label>
                                    <md-option ng-repeat="cate in categories" value="{{cate.Id}}">{{cate.Type}}</md-option>
                                </md-select>
                            </md-input-container>
                            <div class="col-md-2"></div>
                        </div>
                        <table id="newOrders" class="table table-bordered table-responsive table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Product Name
                                    </th>
                                    <th>
                                        Customer Address
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        View Details
                                    </th>
                                    <th>
                                        Move To InProgress
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div style="background-color:#b8c7ce" class="box-footer"></div>
                    <!-- /.box-footer-->
                </div>
            </div>
            <div class="col-md-6">
                <div style="box-shadow:0 0px 11px rgba(0,0,0,0.3)" class="box">
                    <div style="background-color:#b8c7ce" class="box-header with-border">
                        <h3 class="box-title">InProress Orders</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <md-input-container style="text-align:center" class="md-block col-md-8">

                                <md-select id="Select_Category_products" ng-change="changetable()" ng-model="cate.Id">
                                    <label>Search By Category</label>
                                    <md-option ng-repeat="cate in categories" value="{{cate.Id}}">{{cate.Type}}</md-option>
                                </md-select>
                            </md-input-container>
                            <div class="col-md-2"></div>
                        </div>
                        <table id="inProgressOrders" class="table table-bordered table-responsive table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Product Name
                                    </th>
                                    <th>
                                        Customer Address
                                    </th>
                                    <th>
                                        Customer Contact
                                    </th>
                                    <th>
                                        View Details
                                    </th>
                                    <th>
                                        Move To InProgress
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div style="background-color:#b8c7ce" class="box-footer"></div>
                    <!-- /.box-footer-->
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div style="background-color:#b8c7ce" class="box-footer"></div>
        <!-- /.box-footer-->
    </div>

    <div class="modal modal-danger fade" id="modal-danger">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Delete ?</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to Delete this Stock ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">CLOSE</button>
                    <button id="proceed" type="button" class="btn btn-outline" data-dismiss="modal">PROCEED TO DELETE</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>


<script>

    var AppMode = angular.module("MyApp", ['ngMaterial']);

    AppMode.controller("AppCtrl", function ($scope, $http) {

        $("#newOrders").DataTable({
            ajax: {
                url: "/api/NewOrders/",
                dataSrc: ""
            },
            columns: [

                {
                    data: "CustomerId"
                },
                {
                    data: "Id"
                },
                {
                    data: "Date"
                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {
                        //return "<a ng-click='delete()' class='btn btn-primary'  >Remove</a>";
                        return "<md-button type='button' id=" + data + " data-toggle='modal' data-target='#modal-danger' class='btn btn-danger'  >Remove</md-button>";
                    }
                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {
                        //return "<a ng-click='delete()' class='btn btn-primary'  >Remove</a>";
                        return "<md-button type='button' id=" + data + " data-toggle='modal' data-target='#modal-danger' class='btn btn-danger'  >Remove</md-button>";
                    }
                }
            ]
        });










    });
</script>


