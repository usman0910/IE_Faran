
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div ng-app="MyApp" ng-controller="AppCtrl" class="main-content form-horizontal" role="form">




    <div class="box">
        <div style="background-color:#b8c7ce" class="box-header with-border">
            <h3 class="box-title">Products</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <div style="box-shadow:0 0px 11px rgba(0,0,0,0.3)" class="box">
                        <div style="background-color:#b8c7ce" class="box-header with-border">
                            <h3 class="box-title">Add New Product</h3>
                        </div>
                        <div class="box-body">
                            <form name="MyForm">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <md-input-container style="text-align:center" class="md-block col-md-10">

                                        <md-select id="Select_Category" @*ng-change="CheckClient()"*@ required ng-model="category.Id">
                                            <label>Select Category</label>
                                            <md-option ng-repeat="category in categories" value="{{category.Id}}">{{category.Type}}</md-option>
                                        </md-select>
                                    </md-input-container>
                                    <div class="col-md-1"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <md-input-container style="text-align:center" class="md-block col-md-10">

                                        <md-select id="Select_Category" required ng-model="brand.Id">
                                            <label>Select Brand</label>
                                            <md-option ng-repeat="brand in brands" value="{{brand.Id}}">{{brand.Name}}</md-option>
                                        </md-select>
                                    </md-input-container>
                                    <div class="col-md-1"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <md-input-container class="md-block col-md-8" flex-gt-sm>
                                        <label style="text-align:center">Product Description</label>
                                        <input required ng-model="PDescription">
                                    </md-input-container>
                                    <div class="col-md-2"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <md-input-container class="md-block col-md-8" flex-gt-sm>
                                        <label style="text-align:center">Product Name</label>
                                        <input required ng-model="PName">
                                    </md-input-container>
                                    <div class="col-md-2"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <md-input-container class="md-block col-md-8" flex-gt-sm>
                                        <label style="text-align:center">Over View</label>
                                        <input ng-model="POverView">
                                    </md-input-container>
                                    <div class="col-md-2"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <md-input-container class="md-block col-md-8" flex-gt-sm>
                                        <label style="text-align:center">Additional Information</label>
                                        <input ng-model="PAdditionalInformation">
                                    </md-input-container>
                                    <div class="col-md-2"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <md-input-container class="md-block col-md-8" flex-gt-sm>
                                        <label style="text-align:center">Product Video Link</label>
                                        <input ng-model="PProductVideoLink">
                                    </md-input-container>
                                    <div class="col-md-2"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <md-input-container class="md-block col-md-8" flex-gt-sm>
                                        <label style="text-align:center">Price</label>
                                        <input ng-model="PPrice">
                                    </md-input-container>
                                    <div class="col-md-2"></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <md-input-container class="md-block col-md-8" flex-gt-sm>
                                        <label style="text-align:center">Weight Kg</label>
                                        <input ng-model="PWeight">
                                    </md-input-container>
                                    <div class="col-md-2"></div>
                                </div>
                                <div class="row">
                                    <md-input-container class="md-block col-md-4" flex-gt-sm>
                                        <label style="text-align:center">Length cm</label>
                                        <input ng-model="PLength">
                                    </md-input-container>
                                    <md-input-container class="md-block col-md-4" flex-gt-sm>
                                        <label style="text-align:center">Width cm</label>
                                        <input ng-model="PWidth">
                                    </md-input-container>
                                    <md-input-container class="md-block col-md-4" flex-gt-sm>
                                        <label style="text-align:center">Height cm</label>
                                        <input ng-model="PHeight">
                                    </md-input-container>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-body">
                                            <input type="file" class="btn btn-primary col-md-12" id="imageBrowes" />
                                            <div id="imgPreview" class="thumbnail" style="display:none">
                                                <img class="img-responsive" id="targetImg" />
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="text-align:center;padding-bottom:10px">
                                    <md-button ng-disabled="MyForm.$invalid" ng-click="save()" class="md-raised md-primary">Add Category</md-button>
                                </div>
                            </form>
                        </div>
                        <!-- /.box-body -->
                        <div style="background-color:#b8c7ce" class="box-footer"></div>
                        <!-- /.box-footer-->
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-6">
                    <div style="box-shadow:0 0px 11px rgba(0,0,0,0.3)" class="box">
                        <div style="background-color:#b8c7ce" class="box-header with-border">
                            <h3 class="box-title">All Products</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-2"></div>
                                <md-input-container style="text-align:center" class="md-block col-md-8">

                                    <md-select id="Select_Category_products" ng-change="changetable()" ng-model="cate.Id">
                                        <label>Search By Category</label>
                                        <md-option ng-repeat="cate in categories" value="{{cate.Id}}">{{cate.Type}}</md-option>
                                    </md-select>
                                </md-input-container>
                                <div class="col-md-2"></div>
                            </div>
                            <table id="products" class="table table-bordered table-responsive table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Product Name
                                        </th>
                                        <th>
                                            Brand
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Delete
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.box-body -->
                        <div style="background-color:#b8c7ce" class="box-footer"></div>
                        <!-- /.box-footer-->
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>


        </div>
        <!-- /.box-body -->
        <div style="background-color:#b8c7ce" class="box-footer"></div>
        <!-- /.box-footer-->
    </div>

    <div class="modal modal-danger fade" id="modal-danger">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Delete ?</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to Delete this Product ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">CLOSE</button>
                    <button id="proceed" type="button" class="btn btn-outline" data-dismiss="modal">PROCEED TO DELETE</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>


<script>

    var AppMode = angular.module("MyApp", ['ngMaterial']);

    AppMode.controller("AppCtrl", function ($scope, $http) {

        $("#products").DataTable({
            ajax: {
                url: "/api/Product/",
                dataSrc: ""
            },
            columns: [

                {
                    data: "Name"
                },
                {
                    data: "Brands.Name"
                },
                {
                    data: "Categories.Type"
                },
                {
                    data: "Price"
                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {
                        //return "<a ng-click='delete()' class='btn btn-primary'  >Remove</a>";
                        return "<md-button type='button' id=" + data + " data-toggle='modal' data-target='#modal-danger' class='btn btn-danger'  >Remove</md-button>";
                    }
                }
            ]
        });

        $http({
            url: '/api/Category/',
            method: 'GET'

        }).then(function (resp) {
            var Data = resp.data;
            $scope.categories = Data;

        });

        $http({
            url: '/api/Brand/',
            method: 'GET'

        }).then(function (resp) {
            var Data = resp.data;
            $scope.brands = Data;

        });

        $('#products tbody').on('click', 'md-button', function () {
            $scope.Gac = this.id;
        });
        $("#proceed").on('click', function () {
            $scope.delete($scope.Gac);

        });

        $scope.changetable = function () {

            $('#products').DataTable().clear().destroy();
            $("#products").DataTable({
                ajax: {
                    url: "/api/Product/" + $scope.cate.Id,
                    dataSrc: ""
                },
                columns: [

                    {
                        data: "Name"
                    },
                    {
                        data: "Brands.Name"
                    },
                    {
                        data: "Categories.Type"
                    },
                    {
                        data: "Price"
                    },
                    {
                        data: "Id",
                        render: function (data, type, Wholedata) {
                            //return "<a ng-click='delete()' class='btn btn-primary'  >Remove</a>";
                            return "<button id='mybtn' class='btn btn-danger'  >Remove</button>";
                        }
                    }
                ]
            });
        };

        $scope.save = function () {

            var file = $("#imageBrowes").get(0).files;

            var data = new FormData;
            data.append("ImageFile", file[0]);




            $http({
                url: '/Admin/ImageUpload',
                method: 'POST',
                data: data,
                headers: {
                    'Content-Type': undefined
                }


            }).then(function () {

                var product = {
                    Name: $scope.PName,
                    Brand: $scope.PBrand,
                    Description: $scope.PDescription,
                    CategoryId: $scope.category.Id,
                    BrandId: $scope.brand.Id,
                    Weight: $scope.PWeight,
                    Length: $scope.PLength,
                    Width: $scope.PWidth,
                    Height: $scope.PHeight,
                    Price: $scope.PPrice,
                    OverView: $scope.POverView,
                    AdditionalInfo: $scope.PAdditionalInformation,
                    VideoLink: $scope.PProductVideoLink

                }


                $http({
                    url: '/api/Product/New',
                    method: 'POST',
                    data: product


                }).then(function () {
                    $scope.PName = "";
                    $scope.PBrand = "";
                    $scope.PDescription = "";
                    $scope.PWeight = "";
                    $scope.PLength = "";
                    $scope.PWidth = "";
                    $scope.PHeight = "";
                    $scope.PPrice = "";
                    $scope.POverView = "";
                    $scope.PAdditionalInformation = "";
                    $scope.PProductVideoLink = "";
                    $scope.category.Id = undefined;

                    $('#products').DataTable().ajax.reload();

                });


            });




        };


        $scope.delete = function (id) {

            $http.delete('/api/Product/' + id).then(
                function () {

                    $('#products').DataTable().ajax.reload();
                }
            );
        };


    });

    ///////////////////////////////////////////////////////////////////////////////////

    $(document).ready(function () {

        $("#imageBrowes").change(function () {

            var File = this.files;

            if (File && File[0]) {
                ReadImage(File[0]);
            }

        })

    })


    var ReadImage = function (file) {

        var reader = new FileReader;
        var image = new Image;

        reader.readAsDataURL(file);
        reader.onload = function (_file) {

            image.src = _file.target.result;
            image.onload = function () {

                $("#targetImg").attr('src', _file.target.result);
                $("#imgPreview").show();

            }

        }

    }



</script>


